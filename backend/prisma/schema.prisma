generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  slug  String @unique
  email String @unique
  password  String
  status Boolean @default(true)
}

model Treasury {
  id Int @id @default(autoincrement())
  id_system Int @unique
  name String @unique
  short_name String @unique
  account_number String @unique
  gmcore_number String @unique
  bills_10 Int @default(0)
  bills_20 Int @default(0)
  bills_50 Int @default(0)
  bills_100 Int @default(0)
  status Boolean @default(true)

  atms Atm[]
  contacts Contact[]
}

model Atm {
  id Int @id @default(autoincrement())
  id_system Int
  name String @unique
  short_name String @unique
  id_treasury Int
  status Boolean @default(true)

  treasury Treasury @relation(fields: [id_treasury], references: [id])
}

model TypeOperation {
  id Int @id @default(autoincrement())
  name String @unique
  status Boolean @default(true)
}

model TypeOrder {
  id Int @id @default(autoincrement())
  name String @unique
  status Boolean @default(true)
}

model Contact {
  id Int @id @default(autoincrement())
  id_treasury Int
  name String
  email String 
  phone String
  status Boolean @default(true)

  treasury Treasury @relation(fields: [id_treasury], references: [id])
}

model OperatorCard {
  id Int @id @default(autoincrement())
  name String @unique
  status Boolean @default(true)
}
