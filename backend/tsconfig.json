{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "dist",
    "types": ["node"],
    "resolveJsonModule": true,
    "baseUrl": "src"
  },
  "include": [
    "src",
    "src/types"
  ]
}